.item-foot{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 15rpx;
}
.item-foot view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-foot view text{
  margin-left: 10rpx;
}

.item-good image{
  width: 25rpx;
  height: 26rpx;
}

.item-good text{
  font-size:24rpx;
  font-family:SourceHanSansCN-Light;
  font-weight:300;
  color:rgba(38,172,245,1);
}

.item-del image{
  width: 24rpx;
  height: 27rpx;
}
.item-del text{
  font-size:24rpx;
  font-family:SourceHanSansCN-Light;
  font-weight:300;
  color:rgba(38,172,245,1);
}
.item-fx image{
  width: 26rpx;
  height: 26rpx;
}
.item-fx text{
  font-size:24rpx;
  font-family:SourceHanSansCN-Light;
  font-weight:300;
  color:rgba(38,172,245,1);
}
.item-fx button{
  width: 55rpx;
  height: 26rpx;
  display: block;
  padding:0rpx;
  line-height: 26rpx;
  border-radius: 0rpx;
  font-size:24rpx;
  color:rgba(38,172,245,1);
  background-color: #fff;
  margin-left: 10rpx;
}