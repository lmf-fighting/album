page{
background-color: #eee;
}

.item-contain{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
} 

.item-head{
  display: flex;
  flex-direction: row;
  width: 690rpx;
  margin-top: 30rpx;
}
.item-head-icon{
  width: 88rpx;
  height: 88rpx;
}
.item-head-icon image{
  width: 88rpx;
  height: 88rpx;
  border-radius:5px;
}
.item-head-userInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex:0%;
  margin-left: 35rpx;
}

.item-nickName{
  height:32rpx;
  line-height: 32rpx;
  font-size:34px;
  font-family:SourceHanSansCN-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}

.item-time{
  height:17rpx;
  font-size:22rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  line-height: 17rpx;
  color:rgba(169,169,169,1);
  margin-top: 10rpx;
}

.item-body{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.item-body image{
  width: 210rpx;
  height: 210rpx;
  border-radius: 20rpx;
}


.item-body image{
  margin-top: 30rpx;
}
